{
    "openapi": "3.0.0",
    "info": {
        "title": "FusionPBX API",
        "contact": {
            "email": "vongruz@protonmail.com"
        },
        "version": "0.0.8-85-gdbc3fc2"
    },
    "paths": {
        "/domain/signup": {
            "post": {
                "tags": [
                    "Domain",
                    "User"
                ],
                "summary": "Create a domain",
                "description": "Creates a domain. Depending on the configuration the domain `domain_name` can be a subdomain of the main domain or an independent domain",
                "requestBody": {
                    "description": "Domain information",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "domain_parent_uuid": {
                                        "type": "string",
                                        "format": "uuid"
                                    },
                                    "domain_name": {
                                        "type": "string"
                                    },
                                    "domain_description": {
                                        "type": "string"
                                    },
                                    "domain_setting_category": {
                                        "type": "string"
                                    },
                                    "domain_setting_subcategory": {
                                        "type": "string"
                                    },
                                    "domain_setting_name": {
                                        "type": "string"
                                    },
                                    "domain_setting_value": {
                                        "type": "string"
                                    },
                                    "domain_setting_order": {
                                        "type": "number"
                                    },
                                    "domain_setting_enabled": {
                                        "type": "boolean"
                                    },
                                    "domain_setting_description": {
                                        "type": "string"
                                    }
                                },
                                "allOf": [
                                    {
                                        "$ref": "#/components/schemas/Domain"
                                    },
                                    {
                                        "$ref": "#/components/schemas/Domain_setting"
                                    },
                                    {
                                        "properties": {
                                            "users": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "domain_uuid": {
                                                            "type": "string",
                                                            "format": "uuid"
                                                        },
                                                        "username": {
                                                            "type": "string"
                                                        },
                                                        "password": {
                                                            "type": "string"
                                                        },
                                                        "salt": {
                                                            "type": "string"
                                                        },
                                                        "contact_uuid": {
                                                            "type": "string",
                                                            "format": "uuid"
                                                        },
                                                        "user_enabled": {
                                                            "type": "string"
                                                        },
                                                        "add_user": {
                                                            "type": "string"
                                                        },
                                                        "add_date": {
                                                            "type": "string"
                                                        },
                                                        "user_setting_category": {
                                                            "type": "string"
                                                        },
                                                        "user_setting_subcategory": {
                                                            "type": "string"
                                                        },
                                                        "user_setting_name": {
                                                            "type": "string"
                                                        },
                                                        "user_setting_value": {
                                                            "type": "string"
                                                        },
                                                        "user_setting_order": {
                                                            "type": "number"
                                                        },
                                                        "user_setting_enabled": {
                                                            "type": "boolean"
                                                        },
                                                        "user_setting_description": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "allOf": [
                                                        {
                                                            "$ref": "#/components/schemas/User"
                                                        },
                                                        {
                                                            "$ref": "#/components/schemas/User_setting"
                                                        }
                                                    ]
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Get application name and version",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "properties": {
                                                "iidd": {
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/": {
            "get": {
                "tags": [
                    "Default"
                ],
                "description": "Get application name and version",
                "operationId": "Infrastructure\\Api\\Controllers\\DefaultApiController::index",
                "responses": {
                    "200": {
                        "description": "Application name and version",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "title": {
                                            "description": "APP_NAME variable",
                                            "type": "string"
                                        },
                                        "version": {
                                            "description": "Fit tag version",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                },
                                "examples": [
                                    {
                                        "example": "Asdsads",
                                        "summary": "App info",
                                        "value": {
                                            "title": "FusionPBX API",
                                            "version": "0.0.8-62-g192d97b"
                                        }
                                    }
                                ]
                            }
                        }
                    }
                },
                "security": []
            }
        }
    },
    "components": {
        "schemas": {
            "Domain": {
                "properties": {
                    "domain_name": {
                        "description": "Domain name",
                        "type": "string",
                        "format": "hostname"
                    },
                    "domain_description": {
                        "description": "Domain desctiption. Automatically generated upon domain creation if nothing passed",
                        "type": "string",
                        "example": "Created via api at 2017-05-17 14:30:10"
                    },
                    "domain_parent_uuid": {
                        "description": "Parent domain id",
                        "example": "54cdc4b0-3b0d-11e7-888f-c38f274a1cd2",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Domain_setting": {},
            "User": {},
            "User_setting": {}
        },
        "securitySchemes": {
            "api_key": {
                "type": "apiKey",
                "name": "api_key",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Default"
        },
        {
            "name": "Domain",
            "description": "Manage domains"
        },
        {
            "name": "User",
            "description": "Manage users"
        },
        {
            "name": "Extension",
            "description": "Manage extensions"
        }
    ],
    "security": [
        []
    ]
}