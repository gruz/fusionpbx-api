    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/fusionpbx-api": "${workspaceFolder}"
            },
            "log": true,
            "ignore": [
                "**/vendor/**/*",
                "/var/www/fusionpbx-api/fusionpbx/**/*"
            ],
            "xdebugSettings": {
                "max_data": 1000,
                "max_children": 1000,
                "show_hidden": 1
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "ignore": [
                "**/vendor/**/*"
            ]
        }
    ]
}
