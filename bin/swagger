#!/bin/bash
# Go to laravel folder and call this command like: ../bin/swagger
# You must have `inotify` installed. The command is nice when you edit
# swagger comments much and want to monitor if not errors happen
while inotifywait -r --exclude '(./storage|\.phpunit.result.cache|folder1\/ingnorefile1)' \
        -e modify -e create -e moved_to .;
    do DB_HOST="192.168.0.160" php artisan l5-swagger:generate;
done
